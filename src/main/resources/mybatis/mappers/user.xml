<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 1사람의 정보 가져오기(로그인 확인용) -->
	<select id="selectUser" parameterType="com.javaex.vo.UserVo" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no, name
			from users
			where id= #{id}
			and password= #{password}
        ]]>
	</select>


	<!-- 회원정보저장 -->
	<insert id="insertUser" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values (seq_users_no.nextval,
			        #{id},
			        #{password},
			        #{name},
			        #{gender} )
		]]>
	</insert>


	<!-- 회원정보 가져오기(수정폼) -->
	<select id="selectUserByNo" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no, id, password, name, gender
			from users
			where no = #{no}
		]]>
	</select>

	<!-- 회원정보 가져오기(아이디체크) -->
	<select id="selectUserById" parameterType="String" resultType="int">
		<![CDATA[
			select count(*)
			from users
			where id = #{id}
		]]>
	</select>


	<!-- 회원정보 수정 -->
	<update id="updateUser" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users
			set name = #{name},
			    gender = #{gender},
			    password = #{password}
			where no = #{no}    
		]]>
	</update>
	
		<!-- 회원정보 가져오기(아이디체크)2 -->
	<select id="selectUserById2" parameterType="String" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no, id
			from users
			where id = #{id}
		]]>
	</select>
	
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">

	<!-- 방명록 글 가져오기 -->
	<select id="selectList" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			select no, name, password, content, reg_date regDate
			from guestbook
			order by no desc
		]]>
	</select>


	<!-- 방명록 글 저장 -->
	<insert id="insertGuestbook" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			insert into guestbook 
			values (seq_no.nextval,
					#{name},
					#{password},
					#{content},
					sysdate)
		]]>
	</insert>


	<!-- 방명록 글 삭제 -->
	<delete id="deleteGuest" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			delete from guestbook 
			where no= #{no} 
			and password= #{password}
		]]>
	</delete>

	<!-- 방명록 글 저장(키값 지정) ajax -->
	<insert id="insertGuestbookKey" parameterType="com.javaex.vo.GuestbookVo">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			select seq_no.nextval from dual
		</selectKey>
		<![CDATA[
			insert into guestbook 
			values (#{no},
					#{name},
					#{password},
					#{content},
					sysdate)
		]]>

	</insert>

	<!-- 방명록 글 1개 가져오기 ajax -->

	<select id="selectGuestbook" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
	
			<![CDATA[
			select no, name, password, content, reg_date regDate
			from guestbook
			where no= #{no}
		]]>


	</select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gallery">

	<!-- 갤러리저장 -->
	<insert id="insert" parameterType="com.javaex.vo.GalleryVo">
		<![CDATA[
			insert into gallery 
			values ( seq_gallery_no.nextval, 
					 #{userNo}, 
					 #{content}, 
					 #{filePath},
					 #{orgName},
					 #{saveName},
					 #{fileSize} )
		]]>
	</insert>


	<!-- 갤러리 리스트 가져오기 -->
	<select id="selectList" resultType="com.javaex.vo.GalleryVo">
		<![CDATA[
			select g.no, 
				   g.user_no userNo, 
				   u.name userName,
				   g.content, 
				   g.filePath, 
				   g.orgName,
				   g.saveName,  
				   g.fileSize
		     from gallery g, users u
		     where g.user_no = u.no
		     order by g.no desc
		]]>
	</select>

	<!-- 갤러리 1개 가져오기 -->
	<select id="select" parameterType="int" resultType="com.javaex.vo.GalleryVo">
		<![CDATA[
			select g.no, 
				   g.user_no userNo, 
				   u.name userName,
				   g.content, 
				   g.filePath, 
				   g.orgName,
				   g.saveName,  
				   g.fileSize
		     from gallery g, users u
		     where g.user_no = u.no
		     and g.no = #{no}
		]]>
	</select>


	<!-- 갤러리삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from gallery 
			where no = #{no}
		]]>
	</delete>

</mapper>